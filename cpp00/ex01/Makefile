# **************************************************************************** #
# EXECUTABLE                                                                   #
# **************************************************************************** #

NAME	=		phonebook


# **************************************************************************** #
# SOURCE FILES                                                                 #
# **************************************************************************** #

SRC		=		main.cpp Contact.class.cpp PhoneBook.class.cpp

# **************************************************************************** #
# HEADERS                                                                      #
# **************************************************************************** #

HDR		=		PhoneBook.class.hpp Contact.class.hpp \


# **************************************************************************** #
# OBJECT FILES                                                                 #
# **************************************************************************** #

OBJ		=		$(addprefix obj/,$(SRC:%.cpp=%.o))


# **************************************************************************** #
# COMPILER                                                                     #
# **************************************************************************** #

CXX		=		c++


# **************************************************************************** #
# COMPILER FLAGS                                                               #
# **************************************************************************** #

CXXFLAGS	=	-Wall -Wextra -Werror  -std=c++98


# **************************************************************************** #
# RULES                                                                        #
# **************************************************************************** #

all : $(NAME)

$(NAME) : $(OBJ) $(HDR)
	$(CXX) $(CXXFLAGS) $(OBJ) -o $(NAME)

obj/%.o: %.cpp | obj
	$(CXX) -c $(CXXFLAGS) $< -o $@

obj :
	mkdir obj

clean : 
	rm -drf obj

fclean : clean
	rm -f $(NAME)

re : fclean all

run : $(NAME)
	./$(NAME)

.PHONY : all clean fclean re
