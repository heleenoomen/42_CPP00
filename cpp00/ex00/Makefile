# **************************************************************************** #
# EXECUTABLE                                                                   #
# **************************************************************************** #

NAME	=		megaphone

# **************************************************************************** #
# SOURCE FILES                                                                 #
# **************************************************************************** #

SRC		=		megaphone.cpp

# **************************************************************************** #
# OBJECT FILES                                                                 #
# **************************************************************************** #

OBJ		=		$(addprefix obj/,$(SRC:%.cpp=%.o))

# **************************************************************************** #
# COMPILER                                                                     #
# **************************************************************************** #

CPP		=		c++

# **************************************************************************** #
# COMPILER FLAGS                                                               #
# **************************************************************************** #

CPPFLAGS	=	-Wall -Wextra -Werror
# **************************************************************************** #
# RULES                                                                        #
# **************************************************************************** #

all : $(NAME)

$(NAME) : $(OBJ)
	$(CPP) $(CPPFLAGS) $(OBJ) -o $(NAME)

obj/%.o : %.cpp | obj
	$(CPP) -c $(CPPFLAGS) $< -o $@

obj :
	mkdir obj

clean : 
	rm -drf obj

fclean : clean
	rm -f $(NAME)

re : fclean all

.PHONY : all clean fclean
